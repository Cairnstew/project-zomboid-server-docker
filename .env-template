# .env template for Project Zomboid server

# Steam directories and app details
STEAMAPPDIR=/home/steam/pz-dedicated
STEAMCMDDIR=/home/steam/steamcmd
STEAMAPPID=108600

# Force an immediate update (1 to enable, 0 or unset to disable)
FORCEUPDATE=0

# JVM memory allocation (e.g. 1024m, 2048m, 4096m)
MEMORY=4096m

# Zomboid steam flags (1/true or 0/false)
ZOMBOID_STEAM=1

# Deployment user cache directory (optional)
DEPLOYMENT_USER_CACHEDIR=

# Soft reset (1/true to enable)
SOFTRESET=0

# Enable JVM debug (1/true to enable)
DEBUG_JVM=1

# Client flags
SAFEMODE=0
NOSOUND=0
AITEST=0
NOVOIP=0
DEBUG=0
DEBUGLOG_CLIENT=

# Connect and password for client (optional)
CONNECT=
PASSWORD=

# Client debug translation
DEBUGTRANSLATION=0

# Mods folders (semicolon-separated list)
MODFOLDERS=

# ImGui UI options
IMGUI=0
IMGUIDEBUGVIEWPORTS=0

# Server flags
DISABLELOG=
DEBUGLOG=

# Admin credentials (optional)
ADMINUSERNAME=testpz
ADMINPASSWORD=pp

# Network settings
IP=0.0.0.0
PORT=16261
UDPPORT=16261

# GUI mode (1/true to enable)
GUI=0

# Statistic reporting (optional)
STATISTIC=

# SteamVAC anti-cheat (true/false)
STEAMVAC=true

# Server name (default 'servertest' if unset)
SERVERNAME=servertest

# Server preset for SandboxVars (optional)
SERVERPRESET=

# Replace preset file even if exists? (true/false)
SERVERPRESETREPLACE=false

# Mods and Workshop IDs (comma separated)
MOD_IDS=
WORKSHOP_IDS=
